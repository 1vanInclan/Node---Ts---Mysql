{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "types": ["node"], // Añadido para que reconozca Node.js

    // --- ESTAS TRES LÍNEAS ARREGLAN EL ERROR DE EXPRESS ---
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    // ------------------------------------------------------

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false, // CAMBIAR A FALSE si usas Express con CommonJS
    "isolatedModules": true,
    "skipLibCheck": true
  }
}